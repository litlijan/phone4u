<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HomePage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Italianno' rel='stylesheet'>
    <link rel="stylesheet" type="text/css" href="/css/admin/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
</head>

<body>

    <%-include('./partials/admin-sidenav') %>

        <div class="container">
            <div class="row">
                <div class="d-flex justify-content-between mt-3">
                    <h1 class="text-center ">EDIT CATEGORIES</h1>
                </div>
            </div>

            <div class="container my-5 py-5">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-6 p-5 border border-dark rounded">
                        <form action="/admin/editCategory/<%= editCategory._id %>" method="post" onsubmit="return validateForm(event)">
                            <input type="text" name="name" id="categoryName" class="form-control" required value="<%= editCategory.name %>">
                            <div class="d-flex justify-content-center mt-3">
                                <button class="btn btn-outline-dark" type="submit">submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            <script>
                function validateForm(event) {
                    var categoryName = document.getElementById('categoryName').value;
                    if (categoryName.trim() === '') {
                        event.preventDefault();
                        alert('Please enter a valid category name.');
                        return false;
                    }
            
                    return true;
                }
            </script>
            
            


</body>

</html>